{
    "name": "kompakt/directory-runner",
    "type": "library",
    "description": "Run through a directory with event-emitting along the way",
    "authors": [
        { "name": "Christian Hoegl", "email": "chrigu@sirprize.me" }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/event-dispatcher": "~2.8|~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.1.*"
    },
    "autoload": {
        "psr-4": { "Kompakt\\DirectoryRunner\\": "lib/" }
    },
    "suggest": {
        "symfony/console": "~2.8|~3.0",
        "monolog/monolog": "~1.12"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
